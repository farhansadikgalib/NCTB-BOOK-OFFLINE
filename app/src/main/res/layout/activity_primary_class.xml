<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/allc"
    android:orientation="vertical"
    android:gravity="center">
    tools:context=".PrimaryClass">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:text="সবার জন্য শিক্ষা"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="#601889"/>


    <Button
        android:id="@+id/class1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:background="@drawable/rounded_btn"
        android:text="প্রথম শ্রেণি"
        android:textColor="#196048"
        android:textSize="20dp"
        android:textStyle="bold" />

        <Button
            android:id="@+id/class2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:background="@drawable/rounded_btn"
            android:text="দ্বিতীয় শ্রেণি"
            android:textColor="#196048"
            android:textSize="20dp"
            android:textStyle="bold"/>



        <Button
            android:id="@+id/class3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:background="@drawable/rounded_btn"
            android:text=" তৃতীয় শ্রেণি"
            android:textColor="#196048"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/class4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_btn"
            android:text="চতুর্থ শ্রেণি"
            android:textColor="#196048"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/class5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_btn"
            android:text="পঞ্চম শ্রেণি"
            android:textColor="#0a4e37"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"/>



</LinearLayout>